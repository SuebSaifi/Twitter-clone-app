<%=form_for(@comment, url: tweeet_comments_path,remote: true) do |form|%> 
    <p >
        <%=form.hidden_field :user_id ,value: current_user.id%>
        <%=form.label :comment%> 
        <%= form.text_area :comment,class:"textarea form-control"%>
        <%=form.submit :comment, class:"btn btn-info my-3"%> 
    </p>
<%end%>
    