<div class="likes">	
	<% pre_like = current_user.likes.where(tweeet_id: tweeet_id).exists?%>
	<%if pre_like%>
		<div class="dislike">
		    <%like_id=current_user.likes.find_by(tweeet_id: tweeet_id).id%>
			<div id = "dislike<%= @tweeet.likes%>">
			    <%=link_to "/tweeets/#{tweeet_id}/like/#{like_id}",method: :delete,class:"destroy_like", id:"icon",remote: true ,style:"text-decoration:none" do%>
				    <i class="fa-solid fa-heart" style="color:rgb(249, 24, 128);"></i>
				<%end%>
				<%=@tweeet.likes.count%>
			</div>
		</div>
	<%else%>  
		<div id = "like">
			<%=link_to tweeet_likes_toggle_path(tweeet_id) ,method: :post,remote: true,id:"icon",style:"text-decoration:none" do %>
				<span class="icon"><i class="fa-regular fa-heart" style="color:gray;"></i></span>
			<%end%>
			<%=@tweeet.likes.count%>
		</div>
	<%end%>    
</div>